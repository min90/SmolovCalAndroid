<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jmsdevelopment.smolovcal.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@color/textColor">

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edtEmail"
        android:hint="E-mail"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="22dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtPassword"
        android:hint="Password"
        app:layout_constraintLeft_toLeftOf="@+id/edtEmail"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/edtEmail" />

    <CheckBox
        android:text="Remember me"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:id="@+id/checkBox"
        android:gravity="center_vertical|start"
        app:layout_constraintLeft_toLeftOf="@+id/edtPassword"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/edtPassword"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:text="Log On"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        android:layout_marginTop="40dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:text="Smolov Calculator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="24sp"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/content_main"
        android:layout_marginTop="63dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/content_main"
        tools:layout_constraintRight_creator="1" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/content_main"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/content_main"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/content_main"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/content_main"
        tools:layout_constraintBottom_creator="1">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
